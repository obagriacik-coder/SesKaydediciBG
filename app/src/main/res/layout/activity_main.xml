<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111318">

    <!-- Recorder amblemi (kayıt sırasında görünür) -->
    <ImageView
        android:id="@+id/recIcon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:visibility="gone"
        android:contentDescription="@string/untitled"
        android:tint="@android:color/white"
        android:src="@android:drawable/ic_btn_speak_now"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sayaç (00:00:00) - ikonun TAM ÜSTÜNDE -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="00:00:00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/recIcon"
        app:layout_constraintStart_toStartOf="@id/recIcon"
        app:layout_constraintEnd_toEndOf="@id/recIcon"
        app:layout_constraintTop_toTopOf="@id/recIcon" />

    <!-- Start (yeşil) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Start"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/rec_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stopButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_margin="36dp"
        app:layout_constraintStart_margin="24dp"
        app:layout_constraintEnd_margin="12dp" />

    <!-- Stop (kırmızı) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/stopButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Stop"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/rec_red"
        app:layout_constraintStart_toEndOf="@id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_margin="36dp"
        app:layout_constraintStart_margin="12dp"
        app:layout_constraintEnd_margin="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
